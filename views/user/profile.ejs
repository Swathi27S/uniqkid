                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Contact</a>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="container">
       
        <section class="section-container">
            
            <label class="personalinfo">
                <i class="fa fa-user profile-icon"></i>
                <h4>Personal Information</h4>
                <div class="personalinfo-details">
                    <% if(userData) { %>
                        <p>First Name: <%= userData.firstName %></p>
                        <p>Last Name: <%= userData.lastName %></p>
                        <p>Email: <%= userData.email %></p>
                      
                    <% } else { %>
                        <p>No user data available</p>
                    <% } %>
                </div>
                <a href="/editprofile/userData._id" style="color: #e9ecf3; background-color: #0a6929; text-decoration: none; padding: 5px 10px; border-radius: 5px;">Edit</a>
            </label>
            <div class="addresses">
                <a href="/addaddress/<%= userData._id %>" style="color: #e9ecf3; background-color: #6378ef; text-decoration: none; padding: 5px 10px; border-radius: 5px;">Add New Address</a>
                <h4>My Addresses</h4>
                 
            
                <% if(userData) { %>
                    <% address.forEach(address => { %>
                        <% if (!address.isDeleted) { %> <!-- Checking if the address is not deleted -->
                            <div class="address-option" style="margin-bottom: 20px; border: 1px solid #ccc; padding: 10px; border-radius: 5px;">
                                <div class="btn-container" style="margin-top: 10px;">
                                    <a href="/editaddress/<%= address._id %>" style="color: #e9ecf3; background-color: #0a6929; text-decoration: none; padding: 5px 10px; border-radius: 5px;">Edit</a>
                                </div>  
                                <p><%= address.landmark %><br>
                                <%= address.street %><br>
                                <%= address.village %><br>
                                <%= address.city %><br>
                                <%= address.state %><br>
                                <%= address.country %><br>
                                mob :<%= address.phonenumber %><br>
                                pin code : <%= address.zip %></p>
            
                                
                                    <form id="deleteForm<%= address._id %>" action="/deleteaddress/<%= address._id %>?_method=DELETE" method="POST">
                                        <button type="button" onclick="confirmDelete('<%= address._id %>')" style="color: #e9ecf3; background-color: #850c0c; text-decoration: none; padding: 5px 10px; border-radius: 5px; margin-right: 5px;">Delete</button>
                                    </form>
            
                                   
                                
                            </div>
                        <% } %>
                    <% }) %>
                <% } else { %>
                    <p>No addresses added yet</p>
                <% } %>
            </div>
            
            
            
            
            
        </section>
    </div>
