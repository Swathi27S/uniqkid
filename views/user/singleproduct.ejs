    </div>
    <div class="container">
    <div class="product-detail">
        <div class="product-images">
            <div class="main-image">
                <img src="/uploads/<%= product.images[0] %>" alt="Product Image 1" class="active">
            </div>
            <div class="thumbnail-images">
                <img src="/uploads/<%= product.images[0] %>" alt="Product Image 1" class="thumbnail">
                <img src="/uploads/<%= product.images[1] %>" alt="Product Image 2" class="thumbnail">
                <img src="/uploads/<%= product.images[2] %>" alt="Product Image 3" class="thumbnail">
               
            </div>
        </div>
        <div class="product-info">
            <h3 style="font-family: 'Times New Roman', Times, serif; font-weight: 200;">PRODUCT DETAILS</h3>
           
            <h6 class="product-name"><%= product.productName %></h6>
         
            <p class="product-description"><%= product.description %></p>
            <p class="product-price">â‚¹ <%= product.price %></p>
           
            <p class="product-stock <%= product.stock <= 0 ? 'out-of-stock' : 'in-stock' %>">
                <%= product.stock <= 0 ? 'Out of Stock' : 'In Stock' %>
            </p>
            
            
            
        
            <div class="size-selection">
                <label for="size">Size:</label>
                <select name="size" id="size">
                    <option value="10_months">10 months</option>
                    <option value="1_3_yrs">1-3 yrs</option>
                    <option value="4_6_yrs">4-6 yrs</option>
                    <option value="7_9_yrs">7-9 yrs</option>
                    <option value="10_12_yrs">10-12 yrs</option>
                </select>
            </div>
        
            <div class="quantity-selection">
                <label for="quantity">Quantity:</label>
                <select name="quantity" id="quantity">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    
                </select>
            </div>
            
            <div class="action-buttons">
                <button class="btn btn-cart">Add to Cart</button>
                <button class="btn btn-buy-now">Buy Now</button>
                <button class="btn btn-wishlist">Add to Wishlist</button>
            </div>
         
            
        </div>
    </div>
    <div class="review-section">
        <h3>Reviews</h3>
        <textarea name="review" id="review" cols="30" rows="5" placeholder="other customers review"></textarea>
        
    </div>
</div>
